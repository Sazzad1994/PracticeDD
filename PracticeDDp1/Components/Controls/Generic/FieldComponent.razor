<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">@Label</label>
    </div>
    <div class="col-6">
        @Controls
    </div>
    <div class="col">
       @ValidationControls
    </div>
</div>

@code {
    [Parameter]
    public string? Label{ get; set; }
    [Parameter]
    public RenderFragment? Controls { get; set; }
    [Parameter]
    public RenderFragment? ValidationControls { get; set; }

}
