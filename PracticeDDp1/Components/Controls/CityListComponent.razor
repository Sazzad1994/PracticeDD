                            <button class="btn btn-primary" type="button" @onclick="@(()=>{selectedCity(city);})">@city</button>
                        </div>
                    </div>
                </div> *@
                <CityComponent 
                    city="@city" 
                    selectcity="@selectcity"
                CityCallback="HandledSelectedCity"></CityComponent>
            }
        </div>
    </div>
}

@code {
    public string? selectcity = "dhaka";
    [Parameter]
    public EventCallback<string> CityCallback { get; set; }
    public List<string>? Cities = CitiesRepo.GetCities();

    public void ClearSelection()
    {
        this.selectcity = string.Empty;
    }
    public void HandledSelectedCity(string cityName)
    {
        selectcity = cityName;
        CityCallback.InvokeAsync(cityName);
    }
}
